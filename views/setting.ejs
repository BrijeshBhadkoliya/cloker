<!DOCTYPE html>
<html lang="en">



<head>
    <%- include('partials/head.ejs') %>
        <!-- Custom Styles -->


</head>

<body> <%- include('partials/sidebar.ejs') %>`
        <div class="page-body">

            <div class="container-fluid">
                <div class="page-title">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-6 text-center text-md-start mb-2 mb-md-0">
                            <h3>Setting</h3>
                        </div>
                        <div class="col-12 col-md-6 text-center text-md-end">
                            <ol class="breadcrumb  justify-content-center justify-content-md-end mb-0">
                                 <li class="breadcrumb-item"><a href="/admin/dashboard"><i data-feather="home"
                                            class="me-2"></i>Dashboard</a></li>
                                <li class="breadcrumb-item active">
                                    <a href="/admin/setting"><i data-feather="settings" class="me-2"></i>Setting</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

 

            <!-- Container-fluid starts-->
            <div class="container-fluid dashboard-default">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                          
                            <div class="card-body">
                                <form class="theme-form mega-form" action="/admin/settingProfile/<%= setting[0].id %>"
                                    method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <!-- Left Column -->
                                        <div class="col-12 col-md-6">
                                            <div class="mb-3">
                                                <img src="/uploads/<%= setting[0].light_img %>" id="lightlogo"
                                                   style="height: auto; width: auto; max-height: 100px; max-width: 250px;"
                                                    onerror="this.onerror=null; this.src='/default/defult-logo.png';" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="col-form-label">Light Logo</label>
                                                <input class="form-control" type="file" name="lightlogo" id="llogo"
                                                    onchange="document.getElementById('lightlogo').src = window.URL.createObjectURL(this.files[0])" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="col-form-label">Site Title</label>
                                                <input class="form-control" type="text" name="sitetitle"
                                                    value="<%= setting[0].site_titel %>" placeholder="Site Title" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="col-form-label">Shift Start Time</label>
                                                <input class="form-control" type="time" name="shiftStart"
                                                    value="<%= setting[0].shift_start %>"
                                                    placeholder="Shift Start Time" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="col-form-label">Shift End Time</label>
                                                <input class="form-control" type="time" name="shiftEnd"
                                                    value="<%= setting[0].shift_end %>" placeholder="Shift End Time" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="col-form-label">Payroll Date</label>
                                                <select class="form-control" name="payroll">
                                                    <option value="">Select Date</option>
                                                    <% for (let i=1; i <=31; i++) { %>
                                                        <option value="<%= i %>"
                                                            <%=parseInt(setting[0].payroll_date)===i ? 'selected' : ''
                                                            %>><%= i %>
                                                        </option>
                                                        <% } %>
                                                </select>
                                            </div>
                                        </div>

                                        <!-- Right Column -->
                                        <div class="col-12 col-md-6">
                                            <div class="mb-3">
                                                <img src="/uploads/<%= setting[0].dark_img %>" id="darklogo" style="height: auto; width: auto; max-height: 100px; max-width: 250px;"    
                                                    onerror="this.onerror=null; this.src='/default/defult-logo.png';" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="col-form-label">Dark Logo</label>
                                                <input class="form-control" type="file" name="darklogo" id="blogo"
                                                    onchange="document.getElementById('darklogo').src = window.URL.createObjectURL(this.files[0])" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="col-form-label">Employee Working Time</label>
                                                <input class="form-control" type="text" name="workingtime"
                                                    value="<%= setting[0].employee_worktime %>"
                                                    placeholder="HH:MM:SS" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="col-form-label">Employee Break Time</label>
                                                <input class="form-control" type="text" name="breaktime"
                                                    value="<%= setting[0].break_time %>" placeholder="HH:MM:SS" />
                                            </div>
                                          
                                            <div class="mb-3">
                                                <label class="col-form-label">Notice Period</label>
                                                <input class="form-control" type="number" name="noticperiod"
                                                    value="<%= setting[0].notice_period %>"
                                                    placeholder="Notice Period days" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-footer text-start ps-0">
                                        <button class="btn btn-primary" type="submit">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Container-fluid Ends-->

        <%- include('partials/footer.ejs') %>

            <%- include('partials/script.ejs') %>
