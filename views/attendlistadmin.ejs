                                            const timeMatch = t.match(/^(\d{1,2}):(\d{2})(?::(\d{2}))?\s*(am|pm)$/i);
                                            if (timeMatch) {
                                                const hour = timeMatch[1].padStart(2, '0');
                                                const minute = timeMatch[2].padStart(2, '0');
                                                const period = timeMatch[4].toUpperCase();
                                                return `${hour}:${minute} ${period}`;
                                            }
